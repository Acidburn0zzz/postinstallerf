# +--------------------------------------------------------------------------------------------------+
# |HERE BEGINS THE MENU                                                                              |
# +--------------------------------------------------------------------------------------------------+

source /usr/bin/postinstallerf/pid

dist=$(uname -a | grep -oe 'MANJARO' -e 'Ubuntu')


yad --center --image="/usr/share/icons/acciones/Graphics.png" --image-on-top --icons --name="PostInstallerF - Graphics" --window-icon="/usr/share/icons/acciones/topicon.png" --width=800 --height=500  --read-dir="/usr/share/app-install-data-postinstallerf/applications/Graphics/" --title="PostInstallerF - Graphics" --item-width=90 --compact --button="Donate:0" --button="Repositories:2" --button="Close:1" 

ret=$?

if [[ $ret -eq 0 ]]; then
rm -f /tmp/Graphics..lck
	xdg-open http://www.kuboosoft.blogspot.com/ 

/usr/bin/postinstallerf/categorias/Graphics
elif [[ $ret -eq 2 ]]; then
if [ "$dist" = Ubuntu ]; then
software-properties-gtk
elif [ -f /etc/fedora-release ] || [ -f /etc/redhat-release ]; then
/usr/bin/postinstallerf/con-repos
else
if [ -f /usr/bin/gpk-prefs ]; then
gpk-prefs
fi
 fi
rm -f /tmp/Graphics..lck
/usr/bin/postinstallerf/categorias/Graphics
elif [[ $ret -eq 1 ]]; then
	echo "Nothing to do"
	fi
	 


#initialising notification

    noti3=$(loginctl show-session $XDG_SESSION_ID | cut -d= -f2 | tail -n 1); echo "noti3 = $noti3"

